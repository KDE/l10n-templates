#. Tag: guilabel
#. +> stable5
#: index.docbook:328
#, no-c-format
msgid "Trigger When"
msgstr ""

#. Tag: para
#. +> stable5
#: index.docbook:331
#, no-c-format
msgid "This configures the particular window action that must occur for the shortcut to be triggered. The following options are available:"
msgstr ""

#. Tag: para
#. +> stable5
#: index.docbook:336
#, no-c-format
msgid "<guilabel>Window appears</guilabel> - Triggered when a window is opened."
msgstr ""

#. Tag: para
#. +> stable5
#: index.docbook:339
#, no-c-format
msgid "<guilabel>Window disappears</guilabel> - Triggered when a window is closed."
msgstr ""

#. Tag: para
#. +> stable5
#: index.docbook:342
#, no-c-format
msgid "<guilabel>Window gets focus</guilabel> - Triggered when you switch to a window."
msgstr ""

#. Tag: para
#. +> stable5
#: index.docbook:345
#, no-c-format
msgid "<guilabel>Window loses focus</guilabel> - Triggered when you switch away from a window."
