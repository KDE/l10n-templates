#. +> trunk6 stable5
#: makemostof.docbook:181
#, no-c-format
msgid "Checking"
msgstr ""

#. Tag: para
#. +> trunk6 stable5
#: makemostof.docbook:183
#, no-c-format
msgid "Standard bank checking account."
msgstr ""

#. Tag: term
#. +> trunk6 stable5
#: makemostof.docbook:190
#, no-c-format
msgid "Savings"
msgstr ""

#. Tag: para
#. +> trunk6 stable5
#: makemostof.docbook:192
#, no-c-format
msgid "Standard bank savings account."
msgstr ""

#. Tag: term
#. +> trunk6 stable5
#: makemostof.docbook:199
#, no-c-format
msgid "Cash"
msgstr ""

#. Tag: para
#. +> trunk6 stable5
#: makemostof.docbook:201
#, no-c-format
msgid "Money in your pocket or your wallet or in a jar or box on the shelf or under your bed."
msgstr ""

#. Tag: term
#. +> trunk6 stable5
#: makemostof.docbook:209 makemostof.docbook:253
#, no-c-format
msgid "Loan"
msgstr ""

#. Tag: para
#. +> trunk6 stable5
#: makemostof.docbook:211
#, no-c-format
msgid "Loans you make to someone else."
msgstr ""

